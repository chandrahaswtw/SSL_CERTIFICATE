    <div class="card mx-auto shadow" style="width: 35rem; margin-top : 40px; margin-bottom : 15px;">
      <div class="card-header text-center">
        <h5>ACCOUNT SETTINGS</h5>
        <span>Change your password here</span>
      </div>
      <div class="card-body">
        <h6 class="card-title">USERNAME : </h6>
        <div class="input-group mb-4">
          <input type="email" class="form-control" id="primaryEmail" name="primaryEmail" value=" <%= email%>" autocomplete="off" disabled>
          <div class="input-group-prepend bg-white">
            <span class="input-group-text border-left-0 rounded-right bg-light" id="basic-addon1">
              <i class="far fa-envelope"></i>
            </span>
          </div>
        </div>
        <hr>
        <h6 class="card-title">PASSWORD : </h6>
        <form id="FRM">
          <div class="form-group">
            <input type="password" name="CURRENT" class="form-control mb-3" placeholder="Enter current password" id="CURRENT">
            <input type="password" name="NEW" class="form-control mb-3" minlength="8" placeholder="Enter new password" id="NEW">
            <input type="password" name="RENEW" class="form-control mb-3" minlength="8" placeholder="Re-type new password" id="RE-NEW">
            <div class="text-center">
              <button type="submit" class="btn btn-danger" id="CHANGEPWD" disabled>CHANGE PASSWORD</button>
            </div>
          </div>
        </form>
      </div>
    </div>

