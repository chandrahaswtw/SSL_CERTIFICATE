<table class="table table-hover shadow p-3 mb-5 bg-white rounded" id="HOME_TABLE">
    <caption>LIST REFLECTING THE SERVERS AND CERTIFICATE INFO</caption>
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">APP ID</th>
            <th scope="col">APP NAME</th>
            <th scope="col" data-toggle="tooltip" data-placement="top" title="CLICK HERE TO SORT RESULTS BY SERVER NAME">SERVER NAME</th>
            <th scope="col" data-toggle="tooltip" data-placement="top" title="CLICK HERE TO SORT RESULTS BY EXPIRY DATE">EXPIRY DATE</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>

    {{#each ALL_RECORDS}}
    <tr>
        <th scope="col" class="counterCell"></th>
        <td scope="col">{{this.appId}}</td>
        <td scope="col">{{this.appName}}</td>
        <td scope="col">{{this.serverName}}</td>
        <td scope="col">{{this.expDate}}</td>

        {{#isStatus this.expDate}} {{/isStatus}}

        <td scope="col">
            <button type="button" name="modalViewBtn" style="padding: 0;border: none;background: none" id="{{this._id}}" _rev="{{this._rev}}">
                <i class="fas fa-eye" data-toggle="tooltip" data-placement="top" title="CLICK TO VIEW"></i>
            </button>

        </td>

        <td scope="col">
            <button type="button" name="modalEditBtn" style="padding: 0;border: none;background: none" id="{{this._id}}" _rev="{{this._rev}}">
                <i class="fas fa-edit " data-toggle="tooltip" data-placement="top" title="CLICK TO EDIT"></i>
            </button>
        </td>

        <td scope="col">
            <button type="button" name="mailTrig" style="padding: 0;border: none;background: none" id="{{this._id}}" _rev="{{this._rev}}">
                <i class="fas fa-envelope" data-toggle="tooltip" data-placement="top" title="CLICK TO TRIGGER MAIL"></i>
            </button>
        </td>
    </tr>
    {{/each}}
</table>