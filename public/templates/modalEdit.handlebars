<form id="modalEdit">

  {{!-- ROW 1 --}}
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="appId">APPLICATION ID</label>
      <input type="text" class="form-control" id="appId" name="appId" autocomplete="off" value="{{ALL_RECORDS.appId}}">
    </div>

    <div class="form-group col-md-6">
      <label for="appName">APPLICATION NAME</label>
      <input type="text" class="form-control" id="appName" name="appName" autocomplete="off" value="{{ALL_RECORDS.appName}}">
    </div>
  </div>

  {{!-- ROW 2 --}}
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="envName">ENVIRONMENT</label>
      <select id="envName" name="envName" class="form-control">
        <option selected value="">Choose...</option>
        <option value="Production">Production</option>
        <option value="Pre-Production">Pre-Production</option>
        <option value="Development">Development</option>
      </select>
    </div>

    <div class="form-group col-md-6">
      <label for="serverName">SERVER NAME</label>
      <input type="text" class="form-control" id="serverName" name="serverName" autocomplete="off" value="{{ALL_RECORDS.serverName}}">
    </div>
  </div>

  {{!-- ROW 3 --}}
  <div class="form-group">
    <label for="portfolioName">PORTFOLIO</label>
    <input type="text" class="form-control" id="portfolioName" name="portfolioName" autocomplete="off" value="{{ALL_RECORDS.portfolioName}}">
  </div>

  {{!-- ROW 4 --}}
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="certName">CERTIFICATE NAME</label>
      <select id="certName" name="certName" class="form-control">
        <option selected value="">Choose...</option>
        <option value="CERT1">CERT1</option>
        <option value="CERT2">CERT2</option>
        <option value="CERT3">CERT3</option>
      </select>
    </div>

    <div class="form-group col-md-6">
      <label for="expDate">EXPIRY DATE (MM/DD/YYYY)</label>
      <div class="input-group">
        <input type="text" class="datepicker-here form-control" id="expDate" name="expDate" placeholder="Date" data-language='en'
          autocomplete="off" required value="{{ALL_RECORDS.expDate}}">
        <div class="input-group-prepend bg-white">
          <span class="input-group-text border-left-0 rounded-right bg-light" id="basic-addon1">
            <i class="fas fa-calendar-alt"></i>
          </span>
        </div>
      </div>
    </div>
  </div>

  {{!-- ROW 5 --}}
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="primaryName">PRIMARY NAME</label>
      <div class="input-group">
        <input type="text" class="form-control" id="primaryName" name="primaryName" autocomplete="off" value="{{ALL_RECORDS.primaryName}}">
        <div class="input-group-prepend bg-white">
          <span class="input-group-text border-left-0 rounded-right bg-light" id="basic-addon1">
            <i class="fa fa-user"></i>
          </span>
        </div>
      </div>
    </div>

    <div class="form-group col-md-6">
      <label for="primaryPhone">PRIMARY PHONE NUMBER</label>
      <div class="input-group">
        <input type="tel" class="form-control" id="primaryPhone" name="primaryPhone" autocomplete="off" value="{{ALL_RECORDS.primaryPhone}}">
        <div class="input-group-prepend bg-white">
          <span class="input-group-text border-left-0 rounded-right bg-light" id="basic-addon1">
            <i class="fas fa-phone"></i>
          </span>
        </div>
      </div>
    </div>
  </div>

  {{!-- ROW 6 --}}
  <div class="form-group">
    <label for="primaryEmail">PRIMARY EMAIL</label>
    <div class="input-group">
      <input type="email" class="form-control" id="primaryEmail" name="primaryEmail" autocomplete="off" value="{{ALL_RECORDS.primaryEmail}}">
      <div class="input-group-prepend bg-white">
        <span class="input-group-text border-left-0 rounded-right bg-light" id="basic-addon1">
          <i class="far fa-envelope"></i>
        </span>
      </div>
    </div>
  </div>

  {{!-- ROW 7 --}}
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="secondaryName">SECONDARY NAME</label>
      <div class="input-group">
        <input type="text" class="form-control" id="secondaryName" name="secondaryName" autocomplete="off" value="{{ALL_RECORDS.secondaryName}}">
        <div class="input-group-prepend bg-white">
          <span class="input-group-text border-left-0 rounded-right bg-light" id="basic-addon1">
            <i class="fa fa-user"></i>
          </span>
        </div>
      </div>
    </div>

    <div class="form-group col-md-6">
      <label for="secondaryPhone">SECONDARY PHONE NUMBER</label>
      <div class="input-group">
        <input type="tel" class="form-control" id="secondaryPhone" name="secondaryPhone" autocomplete="off" value="{{ALL_RECORDS.secondaryPhone}}">
        <div class="input-group-prepend bg-white">
          <span class="input-group-text border-left-0 rounded-right bg-light" id="basic-addon1">
            <i class="fas fa-phone"></i>
          </span>
        </div>
      </div>
    </div>
  </div>

  {{!-- ROW 8 --}}
  <div class="form-group">
    <label for="secondaryEmail">SECONDARY EMAIL</label>
    <div class="input-group">
      <input type="email" class="form-control" id="secondaryEmail" name="secondaryEmail" autocomplete="off" value="{{ALL_RECORDS.secondaryEmail}}">
      <div class="input-group-prepend bg-white">
        <span class="input-group-text border-left-0 rounded-right bg-light" id="basic-addon1">
          <i class="far fa-envelope"></i>
        </span>
      </div>
    </div>
  </div>

  {{!-- ROW 9 --}}
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="alertToolName">ALERT TOOL NAME</label>
      <input type="text" class="form-control" id="alertToolName" name="alertToolName" autocomplete="off" value="{{ALL_RECORDS.alertToolName}}">
    </div>
    <div class="form-group col-md-6" style="text-align: center">
      <label for="alertMech">ALERT MECHANISM</label>
      <br> {{#isAlertEdit ALL_RECORDS.alertMech}} {{/isAlertEdit}}
    </div>
  </div>

  {{!-- ROW 9 --}}
  <div class="form-group">
    <label for="exampleFormControlTextarea1">REMARKS</label>
    <textarea class="form-control" id="textArea" rows="3"> 
    </textarea>
  </div>


</form>